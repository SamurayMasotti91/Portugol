programa{     //laço de repetição enquanto //
	
	inteiro i = 0
	inteiro nota, media = 1
	
	funcao inicio()
{
	
		enquanto(i <= 2){

			escreva("Digite sua nota" + i + "\n")
			leia(nota)
			media += nota 
			
				i++ 
		}
		escreva("A soma é " + media /3)
	}
}
